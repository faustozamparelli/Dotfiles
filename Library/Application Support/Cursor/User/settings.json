  "latex-workshop.latex.outDir": "%DIR%",
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux",
    "*.bbl",
    "*.blg",
    "*.idx",
    "*.ind",
    "*.lof",
    "*.lot",
    "*.out",
    "*.toc",
    "*.acn",
    "*.acr",
    "*.alg",
    "*.glg",
    "*.glo",
    "*.gls",
    "*.ist",
    "*.fls",
    "*.log",
    "*.fdb_latexmk",
    "*.snm",
    "*.nav",
    "*.dvi",
    "*.synctex.gz"
  ],
  "latex-workshop.latex.clean.outDir": {
    "build": ["**/*"]
  },
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-pdf",
        "-interaction=nonstopmode",
        "-shell-escape",
        "-f",
        "-gg",
        "-pdflatex=xelatex",
        "-aux-directory=%DIR%/build",
        "-output-directory=%OUTDIR%",
        "%DOCFILE%"
      ]
    },
    {
      "name": "clean_build",
      "command": "rm",
      "args": ["-rf", "%DIR%/build"]
    }
  ],
  "latex-workshop.latex.recipe.default": "latexmk (xelatex)",
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk (xelatex)",
      "tools": ["latexmk", "clean_build"]
    }
  ],
  "editor.experimental.asyncTokenization": false,
  "go.goroot": "",
  "workbench.statusBar.visible": false,
  "terminal.integrated.fontSize": 15.6,
  "editor.fontSize": 14,
  "errorLens.enabledDiagnosticLevels": ["info", "error"],
  "jupyter.askForKernelRestart": false,
  "python.defaultInterpreterPath": "/Users/faustozamparelli/.virtualenvs/ml/bin/python",
  "notebook.output.textLineLimit": 100,
  "svelte.enable-ts-plugin": true,
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },

