  "vscode-neovim.neovimExecutablePaths.darwin": "/Users/faustozamparelli/.asdf/shims/nvim",
  "files.autoSaveWhenNoErrors": true,
  "files.autoSave": "afterDelay",
  "editor.formatOnSave": true,
