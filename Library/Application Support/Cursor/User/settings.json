{
  "editor.accessibilitySupport": "off",
  "vscode-neovim.neovimInitVimPaths.darwin": "/Users/faustozamparelli/.vscodeNvim/init.lua",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "vscode-neovim.neovimExecutablePaths.darwin": "/Users/faustozamparelli/.asdf/shims/nvim",
  "files.autoSaveWhenNoErrors": true,
  "files.autoSave": "afterDelay",
  "editor.formatOnSave": true,
  "notebook.formatOnSave.enabled": true,
  "editor.minimap.enabled": false,
  "workbench.activityBar.location": "hidden",
  "workbench.editor.showTabs": "multiple",
  "cSpell.enabled": false,
  "workbench.colorTheme": "__default__",
  "workbench.sideBar.location": "left",
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.defaultProfile.osx": "fish",
  "terminal.external.osxExec": "WezTerm.app",
  "terminal.integrated.defaultLocation": "editor",
  "editor.fontFamily": "Hack Nerd Font Mono",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "files.hotExit": "off",
  "window.zoomLevel": 1.6,
  "window.restoreWindows": "none",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.tabs.defaultIcon": "error-small",
  "terminal.integrated.tabs.location": "left",
  "markdown.extension.toc.orderedList": true,
  "workbench.editorAssociations": {
    "*.copilotmd": "vscode.markdown.preview.editor",
    "*.pdf": "latex-workshop-pdf-hook"
  },
  "workbench.preferredDarkColorTheme": "__high-contrast__",
  "workbench.preferredLightColorTheme": "__default__",
  "editor.linkedEditing": true,
  "latex-workshop.view.pdf.color.dark.backgroundColor": "#000000",
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "git.autofetch": true,
  "workbench.editor.enablePreview": false,
  "terminal.integrated.confirmOnKill": "never",
  "explorer.confirmDelete": false,
  "latex-workshop.latex.outDir": "%DIR%",
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux",
    "*.bbl",
    "*.blg",
    "*.idx",
    "*.ind",
    "*.lof",
    "*.lot",
    "*.out",
    "*.toc",
    "*.acn",
    "*.acr",
    "*.alg",
    "*.glg",
    "*.glo",
    "*.gls",
    "*.ist",
    "*.fls",
    "*.log",
    "*.fdb_latexmk",
    "*.snm",
    "*.nav",
    "*.dvi",
    "*.synctex.gz"
  ],
  "latex-workshop.latex.clean.outDir": {
    "build": ["**/*"]
  },
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-pdf",
        "-interaction=nonstopmode",
        "-shell-escape",
        "-f",
        "-gg",
        "-pdflatex=xelatex",
        "-aux-directory=%DIR%/build",
        "-output-directory=%OUTDIR%",
        "%DOCFILE%"
      ]
    },
    {
      "name": "clean_build",
      "command": "rm",
      "args": ["-rf", "%DIR%/build"]
    }
  ],
  "latex-workshop.latex.recipe.default": "latexmk (xelatex)",
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk (xelatex)",
      "tools": ["latexmk", "clean_build"]
    }
  ],
  "editor.experimental.asyncTokenization": false,
  "go.goroot": "",
  "workbench.statusBar.visible": false,
  "terminal.integrated.fontSize": 15.6,
  "editor.fontSize": 14,
  "errorLens.enabledDiagnosticLevels": ["info", "error"],
  "jupyter.askForKernelRestart": false,
  "python.defaultInterpreterPath": "/Users/faustozamparelli/.virtualenvs/ml/bin/python",
  "notebook.output.textLineLimit": 100,
  "svelte.enable-ts-plugin": true,
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },

  "cursor.cpp.disabledLanguages": ["plaintext", "markdown", "scminput"],
  // --- General VS Code Settings for a Clean Black Theme ---
  "editor.minimap.enabled": false, // Hides the code overview on the right
  "editor.scrollbar.vertical": "hidden", // Hides the vertical scrollbar
  "editor.scrollbar.horizontal": "hidden", // Hides the horizontal scrollbar
  "editor.scrollbar.verticalScrollbarSize": 0, // Ensures no space is left by the vertical scrollbar
  "editor.scrollbar.horizontalScrollbarSize": 0, // Ensures no space is left by the horizontal scrollbar
  "window.menuBarVisibility": "compact", // Hides the traditional menu bar, accessible via Alt key

