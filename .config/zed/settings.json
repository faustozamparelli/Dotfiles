{
  "theme": "Monokai Charcoal (purple)",
  "ui_font_family": "Hack Nerd Font Mono",
  "buffer_font_family": "Hack Nerd Font Mono",
  "vim_mode": true,
  "tab_size": 2,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "autosave": "on_focus_change",
  "format_on_save": "on",
  "experimental.theme_overrides": {
    "editor.foreground": "#a475ff",
    "terminal.background": "#000000",
    "scrollbar.thumb.background": "#a475ff80"
  },
  "terminal": {
    "shell": {
      "program": "fish"
    }
  }
}
