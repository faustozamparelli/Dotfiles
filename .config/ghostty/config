# Send string bindings for CMD+number keys
keybind = cmd+one=text:\x13\x31
keybind = cmd+two=text:\x13\x32
keybind = cmd+three=text:\x13\x33
keybind = cmd+four=text:\x13\x34
keybind = cmd+five=text:\x13\x35
keybind = cmd+six=text:\x13\x36
keybind = cmd+seven=text:\x13\x37
keybind = cmd+eight=text:\x13\x38
keybind = cmd+nine=text:\x13\x39

# Other CMD keybindings sending escape sequences
keybind = cmd+l=text:\x13\x6e
keybind = cmd+h=text:\x13\x70
keybind = cmd+shift+h=text:\x13\x7b
keybind = cmd+shift+l=text:\x13\x7d

# horizontal split
keybind = cmd+b=text:\x13\x62

# vertical split cmd + n
keybind = cmd+n=text:\x13\x76

# kill window cmd + w
keybind = cmd+w=text:\x13\x78

# kill session
keybind = cmd+e=text:\x13\x77
# keybind = cmd+q=text:\x13\x77 it used to be this but then i can't quit ghostty  

# see all the windows in the session
keybind = cmd+r=text:\x13\x73
#keybind = cmd+r=text:\x13\x2c rename the window

#new tab or new tab in the same folder
keybind = cmd+t=text:\x13\x63
keybind = cmd+shift+t=text:\x13\x43

# new session
keybind = cmd+shift+n=text:\x13\x4e

# switch session: first to fzf, second to switch to last used
keybind = cmd+f=text:\x13\x66
keybind = cmd+s=text:\x13\x64


# OPT+SHIFT bindings (for uppercase letters)
keybind = alt+shift+h=text:\x13\x1b\x5b\x44
keybind = alt+shift+j=text:\x13\x1b\x5b\x42
keybind = alt+shift+k=text:\x13\x1b\x5b\x41
keybind = alt+shift+l=text:\x13\x1b\x5b\x43

# OPT (Alt) bindings for letters
keybind = alt+h=text:\x13\x68
keybind = alt+j=text:\x13\x6a
keybind = alt+k=text:\x13\x6b
keybind = alt+l=text:\x13\x6c

